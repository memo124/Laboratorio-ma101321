@model MA101321.Models.libro

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eliminar Libro</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        .container {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h3 {
            margin-bottom: 20px;
        }

        .row {
            margin-bottom: 20px;
        }

        dt {
            font-weight: bold;
            margin-bottom: 10px;
        }

        dd {
            margin-bottom: 10px;
        }

        .btn-danger {
            background-color: #dc3545;
            color: #ffffff;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }
    </style>
</head>
<body>
    <div class="container">
        <h3>¿Estás seguro de que deseas eliminar esto?</h3>
        <div>
            <h4>Libro</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.titulo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.titulo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.isbn)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.isbn)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.anio_edicion)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.anio_edicion)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.editorial)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.editorial)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.descripcion)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.descripcion)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Autor)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Autor.nombre) @Html.DisplayFor(model => model.Autor.apellido)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                <a asp-action="Index">Volver a la lista</a>
            </form>
        </div>
    </div>
</body>
</html>